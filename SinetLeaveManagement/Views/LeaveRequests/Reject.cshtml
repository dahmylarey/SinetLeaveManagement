@model SinetLeaveManagement.Models.LeaveRequest
<div class="container mt-4">
    <h2 class="mb-4">Reject Leave Request</h2>
    <form asp-action="Reject" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Employee</label>
            <input type="text" class="form-control" value="@Model.Employee.FirstName @Model.Employee.LastName" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Start Date</label>
            <input type="text" class="form-control" value="@Model.StartDate.ToShortDateString()" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">End Date</label>
            <input type="text" class="form-control" value="@Model.EndDate.ToShortDateString()" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Leave Type</label>
            <input type="text" class="form-control" value="@Model.LeaveType" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Reason for Rejection</label>
            <textarea asp-for="Comments" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="Comments" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Reject Request</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
<script>
    // Bootstrap form validation
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>